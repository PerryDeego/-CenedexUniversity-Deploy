@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<header>
    <div class="w3-display-middle text-md-center">
        <br />
        <h1 class="w3-jumbo w3-animate-top w3-center text-danger">
            @ViewData["Title"]<i class="fa fa-exclamation-triangle fa-fw"></i>
        </h1>
   
        <hr class="w3-border-white w3-animate-left" style="width:50%">
        <h3 class="w3-center w3-animate-right"> You have insufficient privilege to access these records!</h3>
        <h3 class="w3-center w3-animate-zoom">🚫🚫🚫🚫</h3>
        <h6 class="w3-center w3-animate-zoom">error code: 403 forbidden</h6>
        <small class="w3-center w3-animate-zoom">Please go back to the previous page to continue browsing.</small>
        <br>
        <h2><a class="nav-link text" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Return to Home</a></h2>
    </div>

</header>
