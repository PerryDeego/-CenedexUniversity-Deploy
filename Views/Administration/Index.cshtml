@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="display-1 text-info text-center"><i class="fa fa-user"></i>Admin Dashboard</h1>
<hr />
<!-- Main content -->
<div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
                <div class="inner">
                    <h3><i  class="fa fa-bars" aria-hidden="true"></i></h3>
                   
                    <h4 class="text-white">MainMenus <i class="fa fa-spinner fa-pulse"></i></h4>
                </div>
                
                <a asp-controller="MainMenus" asp-action="Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3><i class="fa fa-list-alt" aria-hidden="true"></i></h3>

                    <h4 class="text-white">SubMenus <i class="fa fa-spinner fa-pulse"></i></h4>
                </div>
                <a asp-controller="SubMenus" asp-action="Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3><i class="fa fa-unlock"></i></h3>

                    <h4 class="text-white">User Roles <i class="fa fa-spinner fa-pulse"></i></h4>
                </div>
                <a asp-controller="Roles" asp-action="Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3><i class="fa fa-users"></i></h3>

                    <h4 class="text-white">Users <i class="fa fa-spinner fa-pulse"></i></h4>
                </div>
                <div class="icon">
                    <i class="ion icon-camera-retro"></i>
                </div>
                <a asp-controller="Users" asp-action="Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
    </div>
    <!-- /.row -->
</div>
<!-- Main row -->

<br /><br />
<h3><b>Manage<small> Audit Logs</small></b></h3>
<div class="card">
    <div class="card-header">
        <h1 class="italic text-center">
            <i class="fa fa-files-o"></i> AUDIT LOGS
        </h1>

        <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-files-o" aria-hidden="true"></i> Manage Update Audit Logs
            </button>
            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" id="update-logs">
                <a class="dropdown-item" asp-area="" asp-controller="CourseAfterUpdateAuditLogs" asp-action="Index">Course Logs</a>
                <a class="dropdown-item" asp-area="" asp-controller="LecturerAfterUpdateAuditLogs" asp-action="Index">Lecturer Logs</a>
                <a class="dropdown-item" asp-area="" asp-controller="MainMenuAfterUpdateAuditLogs" asp-action="Index">MainMenu Logs</a>
                <a class="dropdown-item" asp-area="" asp-controller="StudentAfterUpdateAuditLogs" asp-action="Index">Student Logs</a>
                <a class="dropdown-item" asp-area="" asp-controller="StudentGradeAfterUpdateAuditLogs" asp-action="Index">StudentGrade Logs</a>
                <a class="dropdown-item" asp-area="" asp-controller="SubMenuAfterUpdateAuditLogs" asp-action="Index">SubMenu Logs</a>
            </div>
        </div>
        <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-trash" aria-hidden="true"></i> Manage Delete Audit Logs
            </button>
            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" id="update-logs">
                <a class="dropdown-item" asp-area="" asp-controller="CourseAfterDeleteAuditLogs" asp-action="Index">Course Logs</a>
                <a class="dropdown-item" asp-area="" asp-controller="LecturerAfterDeleteAuditLogs" asp-action="Index">Lecturer Logs</a>
                <a class="dropdown-item" asp-area="" asp-controller="MainMenuAfterDeleteAuditLogs" asp-action="Index">MainMenu Logs</a>
                <a class="dropdown-item" asp-area="" asp-controller="StudentAfterDeleteAuditLogs" asp-action="Index">Student Logs</a>
                <a class="dropdown-item" asp-area="" asp-controller="StudentGradeAfterDeleteAuditLogs" asp-action="Index">StudentGrade Logs</a>
                <a class="dropdown-item" asp-area="" asp-controller="SubMenuAfterDeleteAuditLogs" asp-action="Index">SubMenu Logs</a>
            </div>
        </div>
        <small class="text-info">(Only users associated with the Admin Roles & Permissions have privilege to modifiy contents)</small>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
